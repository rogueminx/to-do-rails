<%= render('layouts/errors', :object => @task) %>

<%= form_for [@list, @task] do |f| %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <br>
  <%= f.label :completed, "Complete" %>
  <%= f.radio_button :completed, true %>
  <%= f.label :incomplete, "Incompleted" %>
  <%= f.radio_button :completed, false %>
  <p><%= f.submit %></p>
<% end %>
